# Production Environment Configuration for CodeCrafts MVP
# Copy this file to .env and update the values for your production environment

# Domain and SSL Configuration
DOMAIN_NAME=codecrafts.app
SSL_EMAIL=admin@codecrafts.app

# Database Configuration
POSTGRES_DB=codecrafts_prod
POSTGRES_USER=codecrafts
POSTGRES_PASSWORD=your_secure_database_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Backend Security Configuration
SECRET_KEY=your_very_secure_secret_key_here_at_least_32_characters_long
JWT_SECRET_KEY=your_jwt_secret_key_here_different_from_secret_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin User Configuration
ADMIN_EMAIL=admin@codecrafts.app
ADMIN_PASSWORD=your_secure_admin_password_here

# External Services
JUDGE0_API_URL=http://judge0:2358
# Alternative: Use external Judge0 service
# JUDGE0_API_URL=https://api.judge0.com

# CORS Configuration
CORS_ORIGINS=https://codecrafts.app,https://www.codecrafts.app

# Logging and Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here_for_error_tracking

# Rate Limiting
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=60

# Frontend Configuration
REACT_APP_API_URL=https://codecrafts.app/api
REACT_APP_ENVIRONMENT=production
REACT_APP_SENTRY_DSN=your_frontend_sentry_dsn_here
REACT_APP_ANALYTICS_ID=your_google_analytics_id_here

# Monitoring (Optional)
GRAFANA_PASSWORD=your_grafana_admin_password_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_app_password
FROM_EMAIL=noreply@codecrafts.app

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
AWS_ACCESS_KEY_ID=your_aws_access_key_for_backups
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_for_backups
AWS_S3_BUCKET=codecrafts-backups
AWS_REGION=us-east-1

# Performance Configuration
WORKER_PROCESSES=4
MAX_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# Security Configuration
ENABLE_HTTPS_REDIRECT=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_DUELS=true
ENABLE_CODE_EXECUTION=true
ENABLE_ANALYTICS=true
ENABLE_MONITORING=false